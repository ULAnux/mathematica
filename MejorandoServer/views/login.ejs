<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
    <title>Demo Autenticación de Usuario</title>
    <link rel="stylesheet" href="css/bootstrap.min.css"> 
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/main.css">
    
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body class>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Ingresar</h1>

    <!-- muestra los mensajes que vengan de la autenticacion -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/login" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Contraseña</label>
            <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-primary btn-lg">Ingresar</button>
    </form>

    <hr>

    <p>¿Necesitas una cuenta? <a href="/signup">Regístrate</a></p>
    <p> ¿Olvidaste la contrasenia? <a href="/forgot"> Recuperala </a>
    <p>O ir a <a href="/">inicio</a>.</p>

</div>

</div>
</body>
</html>
