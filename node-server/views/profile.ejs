<!doctype html>
<!-- views/profile.ejs -->
<html>
<head>
    <meta charset="utf-8">
    <title>ULAnux Mathematica</title>
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/main.css">
    <link href="https://fonts.googleapis.com/css?family=Bree+Serif" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Indie+Flower" rel="stylesheet" type="text/css">

</head>
<body>
<div class="container">
  <div>
    <nav class="color-barra padding-largo">
        <ul class="no_lista">
           <li class="col-md-3 incline-block"><h1 class="indie blanco grande">Mathematicas</h1></li>
             <a href="/profile"><li class="col-md-2 incline-block"><h3 class="blanco peque bree">Inicio</h3></li></a>
            <a href="/lecciones"><li class="col-md-2 incline-block"><h3 class="blanco peque bree">Lecciones</h3></li></a>
            <a href="http://jacinto-davila.blogspot.com/2014/09/bitacora-01-md-u2014-matematicas.html"><li class="col-md-2 incline-block"><h3 class="blanco peque bree">Contacto</h3></li></a>
            <a href="/logout"><li class="col-md-2 incline-block"><h3 class="blanco peque bree">Salir</h3></li></a>
          </ul>
    </nav>
  </div>
  <div class="row" style="margin-top:2em;">

      <!-- INFORMACION LOCAL -->
      <div class="col-sm-4" >
          <div class="well wel-lg"><h2><span class="fa fa-user"></span> Local</h2></div>

          <div class="well"><h4><strong>id</strong>: <%= user._id %><br></h4></div>

          <div class="well"><h4><strong>Email</strong>: <%= user.local.email %><br></h4></div>

          <div class="well"><h4><strong>Contrase√±a</strong>: <%= user.local.password %></h4></div>

      </div>

        <div class="col-sm-4">
            <form action="/profile" method="post">
                <div class="form-group">
                    <h1><strong>Escribe tu Pregunta</strong></h1>
                    <input class="form-control input-lg" name="inputToProlog" type="text" placeholder="Pregunte algo! en forma de pr(). por favor">
                    <button type="submit" class="btn btn-default btn-sm" style="margin-top: 1em;">Preguntar</button>

                </div>
                <%if(question != 'Nothing'){%>
                  <div class="panel-body"><b>Pregunta 1:</b> <%= question%> <b>Respuesta 1:</b> <%= answer%></div>
                  <div class="panel-body"><b>Pregunta 2:</b> <%= question1%> <b>Respuesta 2:</b> <%= answer1%></div>
                  <div class="panel-body"><b>Pregunta 3:</b> <%= question2%> <b>Respuesta 3:</b> <%= answer2%></div>
                <%}%>
            </form>

        </div>

        <div class="col-sm-4">
             <div class="panel panel-info">
                <div class="panel-heading"><h6><strong>Objeto parseado de Pengines</strong></h6></div>
                    <%if(answerObject != 'undefined'){%>
                        <div class="panel-body"><%= answer%></div>
                    <%}else{%>
                        <div class="panel-body"><%= answer%></div>
                    <%}%>
            </div>
            <div class="panel panel-info">
                <div class="panel-heading"><h6><strong>Objeto que Retorna Pengines</strong></h6></div>
                    <%if(answerObject != 'undefined'){%>
                        <div class="panel-body"><%= answerObject%></div>
                    <%}else{%>
                        <div class="panel-body"><%= answerObject%></div>
                    <%}%>
            </div>
        </div>

    </div>

</div>
</body>
</html>
